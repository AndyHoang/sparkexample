{
    "app_name": "hellospark",
    "services": [
        {
            "service_name": "hellospark-service",
            "components": [
                {
                    "component_name": "sparkexample",
                    "image": "registry.giantswarm.io/$COMPANY/sparkexample",
                    "ports": [ "4567/tcp" ],
                    "env": [
                        "POSTGRES_PASSWORD=$POSTGRES_PASSWORD",
                        "POSTGRES_USER=$POSTGRES_USER"
                    ],
                    "domains": { "hello-$COMPANY.gigantic.io": "4567" },
                    "dependencies": [
                        {
                            "name": "database",
                            "port": 5432
                        }
                    ]
                },
                {
                    "component_name": "database",
                    "image": "postgres:latest",
                    "ports": [ "5432" ],
                    "env": [
                        "POSTGRES_PASSWORD=$POSTGRES_PASSWORD",
                        "POSTGRES_USER=$POSTGRES_USER"
                    ]
                }
            ]
        }
    ]
}